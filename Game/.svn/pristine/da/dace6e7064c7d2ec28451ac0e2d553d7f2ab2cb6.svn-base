#ifndef PLAYER_H
#define PLAYER_H

#include "Entity.h"	

class Player
	: public Entity
{
public:
	Player();

	float getMoveSpeed() const { return moveSpeed; }
	float getMaxSprint() const { return maxSprint; }
	float getSprintTime() const { return sprintTime; }
	sf::RectangleShape getSprintRect() const { return sprintRect_; }

	void sprint();
	void walk();
	void updateSprintBar();

	sf::FloatRect xCollider, yCollider;

private:

	float moveSpeed;
	float maxSprint;
	float sprintTime;
	sf::RectangleShape sprintRect_;

	
};
#endif